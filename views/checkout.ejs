<section class="checkout">
    <div class="container">
        <h2 class="section__heading">Оформление</h2>
        <form class="checkout__form" id="order-form">
            <div class="checkout__form__left">
                <div class="row mb-30">
                    <div class="checkout__form__field"  style="width: 100%">
                        <label class="checkout__form__text">Выберите область</label>
                        <div class="custom-select" style="width: 100%">
                            <select id="order-region" style="width: 100%">
                                <option disabled>Область</option>
                                <option value="Xorazm">Xorazm</option>
                                <option value="Toshkent">Toshkent</option>
                                <option value="Qarshi">Qarshi</option>
                            </select>
                        </div>
                    </div>
<!--                    <div class="checkout__form__field">-->
<!--                        <label class="checkout__form__text">Район</label>-->
<!--                        <div class="custom-select">-->
<!--                            <select>-->
<!--                                <option value="0">Район</option>-->
<!--                                <option value="1">Xorazm</option>-->
<!--                                <option value="2">Toshkent</option>-->
<!--                                <option value="3">Qarshi</option>-->
<!--                            </select>-->
<!--                        </div>-->
<!--                    </div>-->
                </div>
                <div class="row mb-30">
                    <label class="checkout__form__text" for="address">Адрес</label>
                    <input class="input" id="order-address" required minlength="3" type="text" placeholder="пример: Ташкентская область, Бектемирский район, улица ...">
                </div>
                <div class="row mb-20">
                    <div class="checkout__form__field">
                        <label class="checkout__form__text" for="name">ФИО получателя</label>
                        <input class="input" type="text" id="order-owner-name" required minlength="3" placeholder="Имя фамилия">
                    </div>
                    <div class="checkout__form__field">
                        <label class="checkout__form__text" for="user_phone">Номер телефона</label>
                        <input class="input" type="tel" id="order-owner-phone" required minlength="3" name="phone">
                    </div>
                </div>
                <div class="row">
                    <label class="checkout__form__text">Оставьте комментарий к заказу</label>
                    <textarea class="input" id="order-owner-comment" style="height: 200px;" required></textarea>
                </div>
            </div>
            <div class="cart__products__total">
                <div class="cart__products__total__top">
                    <ul class="cart__products__total__ul">
                        <li class="cart__products__total__li">
                            <span>Стоимость:</span>
                            <span><%= totalPrice %> UZS</span>
                        </li>
                        <li class="cart__products__total__li">
                            <span>Доставка:</span>
                            <span>0 UZS</span>
                        </li>
<!--                        <li class="cart__products__total__li cart__products__total__li&#45;&#45;discount">-->
<!--                            <span>Скидка:</span>-->
<!--                            <span>-15 000 UZS</span>-->
<!--                        </li>-->
                    </ul>
                    <div class="cart__products__total__price">
                        <span>К оплате:</span>
                        <span class="price"><%= totalPrice %> UZS</span>
                    </div>
                </div>
                <button class="button-blue" style="cursor: pointer;" id="order-form-submit">Оформить заказ</button>
            </div>
        </form>
    </div>
</section>

