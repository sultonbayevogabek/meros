<% var user %>
<%- include('../partials/header') %>

<div class="container pt-20">
    <nav class="breadcrumb">
        <ol class="breadcrumb-list">
            <li class="breadcrumb-item">
                <a class="breadcrumb-link" href="/">
                    Главная
                </a>
            </li>
            <li class="breadcrumb-item">
                <a class="breadcrumb-link" href="/cabinet">
                    Личный кабинет
                </a>
            </li>
            <li class="breadcrumb-item">
                Изменить профиль
            </li>
        </ol>
    </nav>
</div>

<section class="cabinet">
    <div class="container">
        <div class="cabinet__content">
            <%- include("sidebar") %>
            <main class="main--my-details">
                <h2 class="section__heading">
                    Личные данные
                </h2>
                <form class="personal-data__form">
                    <div class="row">
                        <div class="input__wrapper">
                            <label>Имя</label>
                            <input type="text" value="Абдулбасит">
                        </div>
                        <div class="input__wrapper">
                            <label>Дата рождения</label>
                            <input type="text" value="06 Февраль 1998">
                        </div>
                    </div>
                    <div class="row mb50">
                        <div class="input__wrapper">
                            <label>Фамилия</label>
                            <input type="text" value="Вахабов">
                        </div>
                        <div class="gender__wrapper">
                            <span class="gender__title">Пол</span>
                            <div class="gender-checkbox__wrapper">
                                <div class="gender-checkbox">
                                    <input type="radio" id="male-choice" name="gender" value="male" checked>
                                    <label for="male-choice">
                                        Мужской
                                    </label>
                                </div>
                                <div class="gender-checkbox">
                                    <input type="radio" id="female-choice" name="gender" value="female">
                                    <label for="female-choice">
                                        Женский
                                    </label>
                                </div>
                            </div>
                        </div>
                    </div>
                    <button class="my-details__btn button-blue" type="submit" disabled>Сохранить</button>
                </form>
                <h2 class="section__heading pt50">
                    Учётные данные
                </h2>
                <form class="credentials__form">
                    <div class="row mb50">
                        <div class="input__wrapper">
                            <label>Телефон
                            </label>
                            <input type="text" value="+998 97 992 48 78">
                        </div>
                        <div class="input__wrapper">
                            <label>E-mail
                            </label>
                            <input type="email" value="iamvakhabov@gmail.com">
                        </div>
                    </div>
                    <button class="my-details__btn button-blue" disabled>Сохранить</button>
                </form>
                <h2 class="section__heading pt50">
                    Управление аккаунтом
                </h2>
                <ul class="exit__list">
                    <li class="exit__item">
                        Вы с нами с 29 Сентября 2020 года
                    </li>
                    <li class="exit__item">
                        <a class="exit__link" href="/cabinet">
                            Выйти на всех устройствах</a>
                    </li>
                    <li class="exit__item">
                        <a class="exit__link" href="/cabinet">
                            Выйти из аккаунта</a>
                    </li>
                </ul>
                <a href="/cabinet" class="delete-account__link pt50">
                    Удалить аккаунт
                </a>
            </main>
        </div>
    </div>
</section>

<%- include('../partials/catalog-modal') %>
<%- include('../partials/categories-modal') %>

<%- include('../partials/footer') %>