<div class="categories-modal d-none">
    <div class="categories-modal__inner">
        <div class="categories-modal__header">
            <h2>
                <img src="/images/categories-icons/lupa.svg" alt="lupa icon">
                <span>Все категории</span>
            </h2>
            <img id="categories-modal-close" src="/images/categories-icons/times.svg" alt="times icon">
        </div>
        <div class="categories-modal__main">
            <ul class="categories-modal__ul">
                <% for (let i = 0; i < Math.floor(categories.length / 2); i++) { %>
                    <li class="categories-modal__li">
                        <a class="categories-modal__link" href="#">
                            <img src="/images/categories-icons/<%= categories[i].icon_thumb %>" alt="icon">
                            <span><%= categories[i].ru_name[0].toUpperCase() + categories[i].ru_name.substring(1) %></span>
                        </a>
                    </li>
                <% } %>
            </ul>
            <ul class="categories-modal__ul">
                <% for (let i = Math.floor(categories.length / 2); i < categories.length; i++) { %>
                    <li class="categories-modal__li">
